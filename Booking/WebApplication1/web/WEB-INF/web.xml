<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <!--Set file to load on first visit-->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!--Servlets Below-->
    <servlet>
        <servlet-name>Book</servlet-name>
        <jsp-file>book.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>NewUser</servlet-name>
        <servlet-class>controller_Login.NewUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller_Login.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookingSucessful</servlet-name>
        <jsp-file>BookingSucessful.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ListUsers</servlet-name>
        <jsp-file>ListUsers.jsp</jsp-file>
    </servlet>

    <!--Servlets Mapping Below-->
    <servlet-mapping>
        <servlet-name>Book</servlet-name>
        <url-pattern>/Book.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewUser</servlet-name>
        <url-pattern>/NewUser.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookingSucessful</servlet-name>
        <url-pattern>/BookingSucessful.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListUsers</servlet-name>
        <url-pattern>/ListUsers.do</url-pattern>
    </servlet-mapping>

    <!--Session Config Parameters-->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
</web-app>